pipeline {
    agent any

    tools {
        jdk 'jdk21'
    }

    environment {
        JAVA_HOME = "${tool 'jdk21'}"
        PATH = "${env.JAVA_HOME}/bin:${env.PATH}"
	PROJECT_ID = 'faniverse'
        CLUSTER_NAME = 'k8s'
        LOCATION = 'asia-northeast3-a'
        CREDENTIALS_ID = 'gke'
    }
    
    stages {
        stage('Clone repository') {
            steps {
                git branch: 'yerim', url: 'https://github.com/20211129/Faniverse-DevOps.git'
            }
        }

        stage('Load Environment Variables') {
            when {
                expression {
                    return fileExists('backend-repo/FaniverseBE/.env')
                }
            }
            steps {
                script {
                    echo "Loading environment variables from .env"
                    // .env 파일이 존재하는 경우 로드
                    sh 'set -o allexport && source backend-repo/FaniverseBE/.env && set +o allexport'
                }
            }
        }
	    
        stage('Build Backend') {
            steps {
                dir('backend-repo/FaniverseBE') {
                    sh 'chmod +x gradlew'
                    sh './gradlew clean build'
		    sh 'ls -al build/libs' // 빌드 결과 확인
                }
            }
        }

        stage('Build Image') {
            steps {
                script {
                    app = docker.build("yr20211129/faniverse_backend:latest", "backend-repo/FaniverseBE")
                }
            }
        }

 	stage('Run Docker Container Locally') {
	    steps {
                script {
                    // 기존 컨테이너 삭제
                    sh 'docker rm -f faniverse-backend-container || true'
                    
                    echo "Starting Docker container for backend..."
                    // Docker 컨테이너 실행
                    sh 'docker run -d --name faniverse-backend-container -p 8081:8080 faniverse-backend:latest'
                    echo "Docker container for the backend is running successfully."
                }
            }
        }
	    
        stage('Push image') {
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', 'yr20211129') {
                        app.push("${env.BUILD_NUMBER}")
                        app.push("latest")
                    }
                }
            }
        }

	stage('Configure GKE credentials') {
            steps {
                script {
                    // GKE 클러스터 인증 설정
                    sh """
                        gcloud container clusters get-credentials ${env.CLUSTER_NAME} --zone ${env.LOCATION} --project ${env.PROJECT_ID}
                    """
                }
            }
        }
	    
        stage('Deploy to Kubernetes') {
            steps{
		// 기존 Secret 삭제 후 적용
            	sh 'kubectl delete secret faniverse-secret || true'
                sh 'kubectl apply -f backend-repo/FaniverseBE/faniverse-secret.yml'
        	sh 'kubectl apply -f backend-repo/FaniverseBE/deploy.yml'
		
		// 파드 상태 확인
                sh 'kubectl get pods'
		sh 'kubectl get svc'
            }
        }
    }
}
